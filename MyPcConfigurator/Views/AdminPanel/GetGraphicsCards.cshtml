@model List<GraphicsCard>;
@{
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Vendor</th>
            <th scope="col">Model</th>
            <th scope="col">Memory</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gpu in Model)
        {
            <tr>
                <th scope="row">@gpu.Id</th>
                <td>@gpu.Vendor.Name</td>
                <td>@gpu.ModelName</td>
                <td>@gpu.Memory</td>
                <td>@gpu.Price</td>
                <td>@Html.ActionLink("Edit", "AddOrUpdateGraphicsCard", "AdminPanel", new { @graphicsCardId = gpu.Id })</td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Add new graphics card", "AddOrUpdateGraphicsCard", "AdminPanel")
